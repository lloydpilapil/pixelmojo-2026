  "permissions": {
    "allow": [
      "Edit(*)",
      "Write(*)",
      "Read(*)",
      "MultiEdit(*)",
      
      "Bash(npm run *)",
      "Bash(npm install*)",
      "Bash(npm uninstall*)",
      "Bash(npx *)",
      "Bash(next *)",
      "Bash(node *)",
      
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(echo *)",
      "Bash(chmod +x scripts/*)",
      
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git checkout *)",
      "Bash(git log*)",
      "Bash(git stash*)",
      
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(find . *)",
      "Bash(which *)",
      
      "Bash(cursor *)",
      "Bash(code *)",
      "Bash(subl *)",
      "Bash(atom *)"
